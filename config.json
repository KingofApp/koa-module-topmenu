{
  "name": "Top Menu",
  "identifier": "topmenu",
  "description": "Large buttons menu that deploys from the top of the application.",
  "descriptionShort": "Topside deployment menu",
  "documentation": "",
  "type": "A",
  "icon": "menu",
  "version": "1.0",
  "author": "King of App",
  "showOn": {
    "menu": false,
    "market": true,
    "dragDrop": true
  },
  "requires": [],
  "canContain": true,
  "view": "modules/topmenu/index.html",
  "files": [
    "modules/topmenu/controller.js",
    "modules/topmenu/styles.html"
  ],
  "libs": [
    {
      "bower": {
        "PolymerElements/iron-flex-layout": "^1.3.0"
      },
      "src": "bower_components/iron-flex-layout/iron-flex-layout.html"
    }
  ],
  "scope": {
    "sections": [],
    "backgroundImages": [],
    "backgroundColors": [],
    "showicons": true,
    "columns": 3,
    "toolbarTitle": true,
    "toolbarLogo": ""
  },
  "config": [
    {
      "key": "sections",
      "type": "multiInput",
      "templateOptions": {
        "label": "Sections",
        "inputOptions": {
          "type": "select",
          "templateOptions": {
            "options": [],
            "label": "Normal Select"
          }
        }
      }
    },
    {
      "key": "backgroundImages",
      "type": "multiInput",
      "templateOptions": {
        "inputOptions": {
          "type": "input"
        },
        "label": "Background image URLs",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    },
    {
      "key": "backgroundColors",
      "type": "multiInput",
      "templateOptions": {
        "inputOptions": {
          "type": "input"
        },
        "label": "Background colors"
      }
    },
    {
      "key": "showicons",
      "type": "checkbox",
      "templateOptions": {
        "description": "Show menu icons",
        "label": "Menu icons"
      }
    },
    {
      "key": "columns",
      "type": "input",
      "templateOptions": {
        "label": "Columns",
        "description": "Number of columns"
      }
    },
    {
      "key": "toolbarTitle",
      "type": "checkbox",
      "templateOptions": {
        "label": "Toolbar title",
        "description": "Show the toolbar title"
      }
    },
    {
      "key": "toolbarLogo",
      "type": "input",
      "templateOptions": {
        "label": "Toolbar logo",
        "description": "The URL of the toolbar logo image",
        "pattern": "(https?://)([/\\w.()-]*).*"
      }
    }
  ]
}
